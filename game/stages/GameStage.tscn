func _ready() -> void:
	Game.connect(\"score_changed\", self, \"_on_score_changed\")
	Utils.get_main_node().get_node(\"Player\").connect(\"state_changed\", self, \"_on_player_state_changed\")


func _on_score_changed() -> void:
	text = str(Game.score_current)


